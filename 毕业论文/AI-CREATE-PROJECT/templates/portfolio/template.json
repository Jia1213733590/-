      "colors": {
        "primary": "#5D5FEF",
        "secondary": "#FF7262",
        "accent": "#00C9A7"
      }
    },
    "minimal": {
      "name": "Minimal",
      "description": "Clean and simple design with monochrome colors",
      "file": "minimal.css",
      "colors": {
        "primary": "#000000",
        "secondary": "#333333",
        "accent": "#666666"
      }
    },
    "modern": {
      "name": "Modern",
      "description": "Contemporary design with smooth gradients",
      "file": "modern.css",
      "colors": {
        "primary": "#3F51B5",
        "secondary": "#FF4081",
        "accent": "#00BCD4"
      }
    },
    "artistic": {
      "name": "Artistic",
      "description": "Creative design with artistic flourishes",
