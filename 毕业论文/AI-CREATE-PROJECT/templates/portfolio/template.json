      "name": "Professional",
      "description": "Corporate design with a business aesthetic",
      "file": "professional.css",
      "colors": {
        "primary": "#2C3E50",
        "secondary": "#3498DB",
        "accent": "#1ABC9C"
      }
    }
  },
