    "journey-section": {
      "name": "Journey Timeline",
      "description": "Career and education history",
      "required": false,
      "options": ["title", "description", "timeline"]
    },
    "skills-section": {
      "name": "Skills Section",
      "description": "Skills and tools showcase",
      "required": false,
      "options": ["title", "description", "skill-bars", "tools-grid"]
