    },
    "filtering": {
      "name": "Portfolio Filtering",
      "description": "Filter portfolio items by category",
      "required": true,
      "file": "gallery.js"
    },
    "contact_form": {
      "name": "Contact Form",
      "description": "Interactive form for visitors to send messages",
      "required": false,
      "file": "functions.js"
    },
    "testimonials_slider": {
      "name": "Testimonials Slider",
      "description": "Rotating carousel showcasing client feedback",
      "required": false,
      "file": "functions.js"
    },
    "animations": {
      "name": "Page Animations",
      "description": "Smooth animations for page elements",
      "required": false,
      "file": "functions.js" 
    },
    "map": {
      "name": "Location Map",
      "description": "Google Maps integration showing your location",
      "required": false,
      "file": "functions.js"
    },
    "faq_accordion": {
