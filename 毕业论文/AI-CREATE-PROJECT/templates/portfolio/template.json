      "sections": ["hero", "featured-works", "services", "about-preview", "testimonials", "contact-cta"]
    },
    "works": {
      "name": "Works",
      "description": "Portfolio gallery with filtering capabilities",
      "file": "works.html",
      "required": true,
      "sections": ["page-header", "portfolio-gallery", "contact-cta"]
    },
    "work-detail": {
      "name": "Work Detail",
      "description": "Detailed view of individual portfolio items",
      "file": "work-detail.html",
      "required": true,
      "sections": ["page-header", "work-showcase", "work-info", "related-works", "contact-cta"]
    },
    "about": {
      "name": "About",
      "description": "Personal information, skills, and experience",
      "file": "about.html",
      "required": false,
      "sections": ["page-header", "about-section", "journey-section", "skills-section", "testimonials", "contact-cta"]
    },
    "services": {
      "name": "Services",
      "description": "Details about services offered",
      "file": "services.html",
      "required": false,
      "sections": ["page-header", "services-overview", "process-section", "faq-section", "contact-cta"]
    },
